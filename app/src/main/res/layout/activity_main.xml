<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_1"
    android:orientation="horizontal"
    tools:context=".activity.SmartDeskMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="BioniCube SmartDesk"
            android:textSize="40dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="700dp"
            android:layout_height="700dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_main" />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:text="❖Smart Motion Control System"
            android:textSize="35dp" />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:text="❖Smart LED Control Stand"
            android:textSize="35dp" />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:text="❖BLE Communication System"
            android:textSize="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:text="❖Wide Touch Tablet System"
            android:textSize="35dp" />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:text="❖Wireless Charger"
            android:textSize="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:text="❖Healthcare Monitoring And Analysis"
            android:textSize="35dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="System Setting"
                android:textSize="40dp" />

            <ImageView
                android:id="@+id/bt_setting"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="80dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_setting" />
        </FrameLayout>


        <com.dd.CircularProgressButton
            android:id="@+id/bt_connect"
            android:layout_width="196dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:cpb_cornerRadius="48dp"
            app:cpb_textComplete="Connected!"
            app:cpb_textError="Disconnected"
            app:cpb_textIdle="Connection" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:text="Desk Height"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/bt_2"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_minus"
                android:text="CMD_DESK_DOWN" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/ic_table"
                android:text="CMD_DESK_DOWN" />

            <ImageView
                android:id="@+id/bt_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_plus"
                android:text="CMD_DESK_UP" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:text="Desk Tilt"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/bt_6"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_minus" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/ic_table" />

            <ImageView
                android:id="@+id/bt_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_plus" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:text="Smart LED Height"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/bt_4"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_minus"
                android:text="CMD_LED_DOWN" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/ic_light" />

            <ImageView
                android:id="@+id/bt_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_plus"
                android:text="CMD_DESK_UP" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">


            <TextView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:text="Tablet KeyPad mode"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/bt_8"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_minus" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/ic_laptop" />

            <ImageView
                android:id="@+id/bt_7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:text="Smart LED ON/OFF"
                android:textSize="30dp" />

            <Button
                android:id="@+id/bt_9"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@null"
                android:text="OFF"
                android:textSize="35dp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/ic_light" />

            <Button
                android:id="@+id/bt_10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:text="ON"
                android:textSize="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:text="F-IR LED ON/OFF"
                android:textSize="30dp" />

            <Button
                android:id="@+id/bt_11"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@null"
                android:text="OFF"
                android:textSize="35dp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/ic_light" />

            <Button
                android:id="@+id/bt_12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:text="ON"
                android:textSize="35dp" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="10dp" />
    </LinearLayout>


</LinearLayout>
