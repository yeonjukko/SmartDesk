<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="horizontal"
    tools:context="neurosky.com.smartdesk.activity.SmartLedActivity">

    <com.dd.CircularProgressButton
        android:id="@+id/bt_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:cpb_cornerRadius="48dp"
        app:cpb_textComplete="Connected!"
        app:cpb_textError="Disconnected"
        app:cpb_textIdle="Connection" />

    <ImageButton
        android:id="@+id/bt_setting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/ic_setting" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Manual Mode"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:mrl_rippleOverlay="true">

                    <LinearLayout
                        android:id="@+id/layout_mood"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="25dp"
                        android:background="#DAB0B1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_mood" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Mood"
                            android:textSize="15dp" />
                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:mrl_rippleOverlay="true">

                    <LinearLayout
                        android:id="@+id/layout_study"
                        android:layout_width="80dp"
                        android:layout_height="80dp"

                        android:layout_marginLeft="25dp"
                        android:background="#C0BC5F"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_study" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Study"
                            android:textSize="15dp" />
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:gravity="center">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:mrl_rippleOverlay="true">

                    <LinearLayout
                        android:id="@+id/layout_relax"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="25dp"
                        android:background="#B2DCB9"

                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_relax" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Relax"
                            android:textSize="15dp" />
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:mrl_rippleOverlay="true">

                    <LinearLayout
                        android:id="@+id/layout_brainwave"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="25dp"
                        android:background="#AFBCD7"
                        android:gravity="center"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_brain" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Brainwave"
                            android:textSize="15dp" />
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center"
                android:text="Picker Mode"
                android:textSize="20dp" />

            <com.larswerkman.holocolorpicker.ColorPicker
                android:id="@+id/picker"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:color_wheel_thickness="5dp" />


            <com.larswerkman.holocolorpicker.OpacityBar
                android:id="@+id/opacitybarWarm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:bar_pointer_halo_radius="30dp"
                app:bar_pointer_radius="10dp"
                app:bar_thickness="25dp" />

            <com.larswerkman.holocolorpicker.OpacityBar
                android:id="@+id/opacitybarCool"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:bar_pointer_halo_radius="30dp"
                app:bar_pointer_radius="10dp"
                app:bar_thickness="25dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:text="Smart LED Height"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/bt_4"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_minus"
                    android:text="CMD_LED_DOWN" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:src="@drawable/ic_light" />

                <ImageView
                    android:id="@+id/bt_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_plus"
                    android:text="CMD_DESK_UP" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:text="Smart LED ON/OFF"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/bt_9"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:text="OFF"
                    android:textSize="35dp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp" />

                <Button
                    android:id="@+id/bt_10"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:text="ON"
                    android:textSize="35dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>
