<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.BrainWaveActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Signal Quality : "
                android:textSize="30dp" />


            <TextView
                android:id="@+id/sqText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="--"
                android:textSize="30dp" />

            <LinearLayout
                android:id="@+id/linearLayoutLeftTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textViewLeftCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="현재 모드:"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textViewCurrentMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="30dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Brainwave Spectrum"
                    android:textSize="40dp" />

                <org.eazegraph.lib.charts.BarChart
                    android:id="@+id/barchart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="30dp"
                    app:egBarWidth="50dp"
                    app:egFixedBarWidth="true"
                    app:egLegendHeight="0dp"
                    app:egShowDecimal="false" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/attTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Attention Mode"
                    android:textSize="40dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <at.grabner.circleprogress.CircleProgressView

                        android:id="@+id/circleViewAttention"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textAlignment="center"
                        app:cpv_autoTextSize="false"
                        app:cpv_barColor="#de5a5a"
                        app:cpv_barWidth="30dp"
                        app:cpv_blockCount="64"
                        app:cpv_blockScale="0.7"
                        app:cpv_innerContourSize="0dp"
                        app:cpv_maxValue="100"
                        app:cpv_outerContourSize="0dp"
                        app:cpv_rimColor="#de5a5a"
                        app:cpv_rimWidth="0dp"
                        app:cpv_seekMode="true"
                        app:cpv_showTextInSpinningMode="true"
                        app:cpv_showUnit="false"
                        app:cpv_spinColor="#ffffff"
                        app:cpv_textScale="1"
                        app:cpv_textSize="100dp"
                        app:cpv_value="0" />

                    <View
                        android:id="@+id/viewAttentionMode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayoutMeditaionMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/medTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Meditation Mode"
                    android:textSize="40dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <at.grabner.circleprogress.CircleProgressView
                        android:id="@+id/circleViewMeditation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textAlignment="center"
                        app:cpv_autoTextSize="false"
                        app:cpv_barColor="#de5a5a"
                        app:cpv_barWidth="30dp"
                        app:cpv_blockCount="64"
                        app:cpv_blockScale="0.7"
                        app:cpv_innerContourSize="0dp"
                        app:cpv_maxValue="100"
                        app:cpv_outerContourSize="0dp"
                        app:cpv_rimColor="#de5a5a"
                        app:cpv_rimWidth="0dp"
                        app:cpv_seekMode="true"
                        app:cpv_showTextInSpinningMode="true"
                        app:cpv_showUnit="false"
                        app:cpv_spinColor="#ffffff"
                        app:cpv_textScale="1"
                        app:cpv_textSize="100dp"
                        app:cpv_value="0" />

                    <View
                        android:id="@+id/viewMediationMode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewMusicTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Control w/ Music &amp; Light"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/textViewSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Moonlight Sonata"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />


                <TextView
                    android:id="@+id/textViewSinger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Beethoven"
                    android:textColor="#80FFFFFF"
                    android:textSize="15sp" />


                <!--<ImageView-->
                <!--android:id="@+id/next"-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:layout_alignRight="@+id/musicPlayerView"-->
                <!--android:layout_margijjjjnTop="50dp"-->
                <!--android:background="@drawable/icon_next" />-->


                <!--<ImageView-->
                <!--android:id="@+id/previous"-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:layout_alignLeft="@+id/musicPlayerView"-->
                <!--android:layout_marginTop="50dp"-->
                <!--android:background="@drawable/icon_previous" />-->

                <co.mobiwise.library.MusicPlayerView
                    android:id="@+id/musicPlayerView"
                    android:layout_width="500dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    app:buttonColor="#ff0028"
                    app:cover="@drawable/cover"
                    app:progressLoadedColor="#00815e"
                    app:textColor="#80FFFFFF"
                    app:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewTheraphyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Therapy Mode"
                    android:textSize="40dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:mrl_rippleOverlay="true">

                            <LinearLayout
                                android:id="@+id/layout_study"
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:background="#FFFFCC"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageView"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_study_2"
                                    android:tint="#000000" />


                            </LinearLayout>

                        </com.balysv.materialripple.MaterialRippleLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="오랜 집중력이 요구될 때 \n(4,300 ~ 5,300k)"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="장시간 집중력에\n적합한 색온도"
                            android:textSize="18dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:mrl_rippleOverlay="true">

                            <LinearLayout
                                android:id="@+id/layout_attention"
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:background="#4F81BD"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_attention" />


                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="높은 집중력이 요구될 때 \n(6,000 ~ 7,000k)"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="주의력과 고도의 집중력에\n적합한 색온도"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:mrl_rippleOverlay="true">

                            <LinearLayout
                                android:id="@+id/layout_sleep"
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:background="#8EB4E3"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageView4"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_relax" />

                            </LinearLayout>

                        </com.balysv.materialripple.MaterialRippleLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="휴식이 필요할 때 \n(2,500 ~ 3,300k)"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="안정감있는 휴식 등에\n적합한 색온도"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:mrl_rippleOverlay="true">

                            <LinearLayout
                                android:id="@+id/layout_relax"
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:background="#01B050"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_sleep" />

                            </LinearLayout>

                        </com.balysv.materialripple.MaterialRippleLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="숙면이 필요할 때 \n(2,500 ~ 3,300k)"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="심신의 안정과 숙면에\n적합한 색온도"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:mrl_rippleOverlay="true">

                            <LinearLayout
                                android:id="@+id/layout_happy"
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:background="#FFFF02"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageView2"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_happy"
                                    android:tint="#000000" />

                            </LinearLayout>

                        </com.balysv.materialripple.MaterialRippleLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="무기력 해소\n"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="안정감있는 휴식 등에\n적합한 색온도"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:mrl_rippleOverlay="true">

                            <LinearLayout
                                android:id="@+id/layout_depression"
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:background="#FF67FF"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_depression" />

                            </LinearLayout>

                        </com.balysv.materialripple.MaterialRippleLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="우울증 해소 \n"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="안정감있는 휴식 등에\n적합한 색온도"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
